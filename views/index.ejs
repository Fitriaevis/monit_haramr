        </svg>
        <!-- Contact Section-->
        <%- include('partials/index/_contact') %>
    </main>
    <!-- Footer-->
    <%- include('partials/index/_footer') %>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="javascripts/scripts.js"></script>
    <!-- Bootstrap Toast JS -->
    <script>
        document.getElementById('activityForm').addEventListener('submit', function(event) {
            var confirmation = confirm("Apakah data yang diinputkan sudah benar?");
            if (!confirmation) {
                event.preventDefault();
            } else {
                event.preventDefault(); // Prevent form submission to show the toast
                var toastEl = new bootstrap.Toast(document.getElementById('liveToast'));
                toastEl.show();
                // Simulate form submission (e.g., by using AJAX or similar here if needed)
            }
        });
    </script>

    <!-- Bootstrap Toast HTML -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="liveToast" class="toast align-items-center text-bg-info border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    Data sudah diinputkan
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
</body>
</html>
